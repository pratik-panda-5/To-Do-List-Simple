<%- include('header') -%> 
    <div class="box" id="heading">
        <h1><%= today %> </h1>
    </div>
    <div class="box">
        <form action="/delete" method="post">
            <% for(i = 0; i<items.length; i++){ %>
                <div class="item">
                    <input onchange="this.form.submit()" name="checkbox" value="<%= items[i]._id %>" type="checkbox">
                    <p><%= items[i].name %></p>
                </div>
            <%} %>
            <input type="hidden" name="listName" value="<%= today %>">
        </form> 
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add Item" autocomplete="off">
            <button type="submit" name="list" value="<%= today %>">+</button>
        </form>
    </div>

<%- include('footer') -%>     
